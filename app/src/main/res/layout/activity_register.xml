<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/comm_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_35"
        android:paddingRight="@dimen/dp_35"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_28"
            android:background="@drawable/shape_input_text"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_9"
            android:paddingRight="@dimen/dp_9">

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_6"
                android:src="@mipmap/ic_register_user" />

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入用户名(6~20位)"
                android:inputType="text"
                android:maxLength="20"
                android:paddingBottom="@dimen/dp_13"
                android:paddingTop="@dimen/dp_13"
                android:textColor="@color/Cl_333333"
                android:textSize="@dimen/dp_13" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_28"
            android:background="@drawable/shape_input_text"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_9"
            android:paddingRight="@dimen/dp_9">

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_6"
                android:src="@mipmap/ic_register_user" />

            <EditText
                android:id="@+id/et_realname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入真实姓名"
                android:inputType="text"
                android:maxLength="20"
                android:paddingBottom="@dimen/dp_13"
                android:paddingTop="@dimen/dp_13"
                android:textColor="@color/Cl_333333"
                android:textSize="@dimen/dp_13" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_18"
            android:background="@drawable/shape_input_text"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_9"
            android:paddingRight="@dimen/dp_9">

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_6"
                android:src="@mipmap/ic_register_pswd" />

            <EditText
                android:id="@+id/et_pswd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入密码(6~20位)"
                android:inputType="textPassword"
                android:maxLength="20"
                android:paddingBottom="@dimen/dp_13"
                android:paddingTop="@dimen/dp_13"
                android:textColor="@color/Cl_333333"
                android:textSize="@dimen/dp_13" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_18"
            android:background="@drawable/shape_input_text"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_9"
            android:paddingRight="@dimen/dp_9">

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_6"
                android:src="@mipmap/ic_register_pswd" />

            <EditText
                android:id="@+id/et_pswd_again"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入确认密码(6~20位)"
                android:inputType="textPassword"
                android:maxLength="20"
                android:paddingBottom="@dimen/dp_13"
                android:paddingTop="@dimen/dp_13"
                android:textColor="@color/Cl_333333"
                android:textSize="@dimen/dp_13" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_18"
            android:background="@drawable/shape_input_text"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_9"
            android:paddingRight="@dimen/dp_9">

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_6"
                android:src="@mipmap/ic_register_phone" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:digits="0123456789"
                android:hint="请输入手机号"
                android:inputType="phone"
                android:maxLength="11"
                android:paddingBottom="@dimen/dp_13"
                android:paddingTop="@dimen/dp_13"
                android:textColor="@color/Cl_333333"
                android:textSize="@dimen/dp_13" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_18"
            android:background="@drawable/shape_input_text"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_9"
            android:paddingRight="@dimen/dp_9">

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_6"
                android:src="@mipmap/ic_register_v_code" />

            <EditText
                android:id="@+id/et_v_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:digits="0123456789"
                android:hint="请输入验证码"
                android:inputType="phone"
                android:maxLength="5"
                android:paddingBottom="@dimen/dp_13"
                android:paddingTop="@dimen/dp_13"
                android:textColor="@color/Cl_333333"
                android:textSize="@dimen/dp_13" />

            <TextView
                android:id="@+id/tv_v_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_13"
                android:paddingTop="@dimen/dp_13"
                android:text="获取验证码"
                android:textColor="@drawable/select_v_code_text"
                android:textSize="@dimen/dp_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_18"
            android:background="@drawable/shape_input_text"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_9"
            android:paddingRight="@dimen/dp_9">

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_6"
                android:src="@mipmap/ic_register_i_code" />

            <EditText
                android:id="@+id/et_i_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入邀请码（选填）"
                android:maxLength="6"
                android:paddingBottom="@dimen/dp_13"
                android:paddingTop="@dimen/dp_13"
                android:textColor="@color/Cl_333333"
                android:textSize="@dimen/dp_13" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册即视为同意《"
                android:textColor="@color/Cl_b2b2b2"
                android:textSize="@dimen/dp_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="紧商注册协议"
                android:textColor="@color/Cl_007aff"
                android:textSize="@dimen/dp_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="》"
                android:textColor="@color/Cl_b2b2b2"
                android:textSize="@dimen/dp_12" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_26"
            android:background="@drawable/select_bg_button_round"
            android:clickable="false"
            android:gravity="center_horizontal"
            android:padding="@dimen/dp_13"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_15" />

    </LinearLayout>
</LinearLayout>