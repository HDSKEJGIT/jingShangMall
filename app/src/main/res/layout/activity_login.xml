<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/comm_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_35"
        android:paddingRight="@dimen/dp_35">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_92"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_login_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_34"
            android:background="@drawable/shape_input_text"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_9"
            android:paddingRight="@dimen/dp_9">

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_5"
                android:src="@mipmap/ic_register_user" />

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入用户名(6~20位)"
                android:inputType="text"
                android:maxLength="20"
                android:paddingBottom="@dimen/dp_13"
                android:paddingTop="@dimen/dp_13"
                android:textColor="@color/Cl_333333"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_27"
            android:background="@drawable/shape_input_text"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_9"
            android:paddingRight="@dimen/dp_9">

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_5"
                android:src="@mipmap/ic_register_pswd" />

            <EditText
                android:id="@+id/et_pswd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入密码(6~20位)"
                android:inputType="textPassword"
                android:maxLength="20"
                android:paddingBottom="@dimen/dp_13"
                android:paddingTop="@dimen/dp_13"
                android:textColor="@color/Cl_333333"
                android:textSize="@dimen/dp_13" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingTop="@dimen/dp_8"
            android:text="忘记密码"
            android:textColor="@color/Cl_808080"
            android:textSize="@dimen/dp_12" />

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_27"
            android:background="@drawable/select_bg_button_round"
            android:clickable="false"
            android:gravity="center_horizontal"
            android:padding="@dimen/dp_13"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_15" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_8">
            <LinearLayout
                android:id="@+id/ll_to_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="还没注册? "
                    android:textColor="@color/Cl_b2b2b2"
                    android:textSize="@dimen/dp_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="去注册 >"
                    android:textColor="@color/Cl_e8000e"
                    android:textSize="@dimen/dp_12" />

            </LinearLayout>
            <TextView
                android:id="@+id/tv_phone_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"

                android:text="手机号登录"
                android:textColor="@color/Cl_e8000e"
                android:textSize="@dimen/dp_12" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ll_qq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_46"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_42"
                    android:layout_height="@dimen/dp_42"
                    android:src="@mipmap/ic_qq" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="QQ登录"
                    android:textColor="@color/Cl_686868"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_wx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_50"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/dp_42"
                    android:layout_height="@dimen/dp_42"
                    android:src="@mipmap/ic_wx" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="微信登录"
                    android:textColor="@color/Cl_686868"
                    android:textSize="@dimen/dp_12" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>